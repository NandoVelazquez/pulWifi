<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="vertical">
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="80dip" 
  android:orientation="horizontal">    
<TableRow
android:layout_marginBottom="4dip">
    <TextView 
    android:layout_height="40dip" 
    android:id="@+id/textView1" 
    android:textColor="#FF0000"
    android:textSize="30dp" 
    android:text="@string/showpass_network_name" android:layout_gravity="left" android:layout_width="160dp" android:layout_weight="1">
    </TextView>
    <TextView 
    android:layout_height="wrap_content" 
    android:id="@+id/showpass_ESSID" 
    android:text="XXXXXX_XXXXXX"
    android:color="#0000FF"
    android:textSize="26dp"    
    android:gravity="right" android:layout_gravity="right" android:layout_width="160dp" android:layout_weight="1">    
    </TextView>
</TableRow>
<TableRow>
    <TextView 
    android:text="@string/showpass_network_mac"
    android:textColor="#FF0000" 
    android:id="@+id/textView3"
    android:textSize="30dp"     
    android:layout_height="40dip" 
    android:layout_gravity="left" android:layout_width="160dp" android:layout_weight="1">
    </TextView>
    <TextView 
    android:text="XX:XX:XX:XX:XX:XX" 
    android:id="@+id/showpass_BSSID" 
    android:color="#0000FF"
    android:layout_height="40dip"
    android:textSize="26dp"   
    android:gravity="center_horizontal" 
    android:layout_gravity="right"
    android:layout_marginBottom="0dip" android:layout_width="160dp" android:layout_weight="1">
    </TextView>
</TableRow>
</TableLayout>    
    <Button 
    android:text="@string/showpass_button_showpass" 
    android:id="@+id/button_showpass"
    android:textSize="24dp" 
    android:layout_width="fill_parent" 
    android:textStyle="bold" 
    android:layout_height="50dip" android:layout_marginTop="2dip">
    </Button>
    <Button 
    android:text="@string/showpass_button_clipboard" 
    android:id="@+id/button_clipboard"
    android:textSize="21dp"  
    android:layout_width="fill_parent"
    android:textStyle="bold" 
    android:layout_marginTop="0dip" android:layout_height="50dip">
    </Button>
    <Button 
    android:text="@string/showpass_button_back" 
    android:id="@+id/button_back" 
    android:layout_height="50dip"
    android:textSize="24dp"  
    android:layout_width="fill_parent"
    android:textStyle="bold" 
    android:layout_marginTop="0dip">
    </Button>
</LinearLayout>
<LinearLayout android:id="@+id/ads"
		android:orientation="vertical"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"/>
	
</RelativeLayout>
