<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:orientation="horizontal" >

            <TableRow android:layout_marginBottom="4dip" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="160dp"
                    android:layout_height="40dip"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/showpass_network_name"
                    android:textColor="#FF0000"
                    android:textSize="30dp" >
                </TextView>

                <TextView
                    android:id="@+id/showpass_ESSID"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="XXXXXX_XXXXXX"
                    android:textSize="26dp"
                    android:color="#0000FF" >
                </TextView>
            </TableRow>

            <TableRow >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="160dp"
                    android:layout_height="40dip"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/showpass_network_mac"
                    android:textColor="#FF0000"
                    android:textSize="30dp" >
                </TextView>

                <TextView
                    android:id="@+id/showpass_BSSID"
                    android:layout_width="160dp"
                    android:layout_height="40dip"
                    android:layout_gravity="right"
                    android:layout_marginBottom="0dip"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="XX:XX:XX:XX:XX:XX"
                    android:textSize="26dp"
                    android:color="#0000FF" >
                </TextView>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button_showpass"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="2dip"
            android:text="@string/showpass_button_showpass"
            android:textSize="24dp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/button_clipboard"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="0dip"
            android:text="@string/showpass_button_clipboard"
            android:textSize="21dp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/button_back"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="0dip"
            android:text="@string/showpass_button_back"
            android:textSize="24dp"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />

</RelativeLayout>