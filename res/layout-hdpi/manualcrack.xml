<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_manualcrack"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/manualcrack"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dip"
            android:layout_marginLeft="4dip"
            android:layout_marginTop="4dip"
            android:text="@string/manualHeader"
            android:textSize="20dip"
            android:typeface="sans" >

            <!-- android:textStyle="bold"> -->
        </TextView>

        <EditText
            android:id="@+id/inputESSID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:hint="@string/manual_ESSID_hint"
            android:singleLine="true"
            android:text="@+id/EditText01" >
        </EditText>

        <EditText
            android:id="@+id/inputMAC"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dip"
            android:hint="@string/manual_BSSID_hint"
            android:maxLength="17"
            android:singleLine="true"
            android:text="@+id/EditText02" >
        </EditText>

        <Button
            android:id="@+id/Button01"
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:layout_marginTop="18dip"
            android:gravity="center"
            android:text="@string/mm_OK"
            android:textSize="32dp"
            android:textStyle="bold"
            android:typeface="sans" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />

</RelativeLayout>