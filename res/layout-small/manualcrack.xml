<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/rl_manualcrack"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/manualcrack"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="2dip"
            android:text="@string/manualHeader"
            android:textSize="17dp"
            android:typeface="sans" >

            <!-- android:textStyle="bold"> -->
        </TextView>

        <EditText
            android:id="@+id/inputESSID"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginBottom="2dip"
            android:hint="@string/manual_ESSID_hint"
            android:singleLine="true"
            android:text="" />

        <EditText
            android:id="@+id/inputMAC"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginBottom="2dip"
            android:hint="@string/manual_BSSID_hint"
            android:maxLength="17"
            android:singleLine="true"
            android:text="" />

        <Button
            android:id="@+id/Button01"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:gravity="center"
            android:text="@string/mm_OK"
            android:textSize="26dp"
            android:textStyle="bold"
            android:typeface="sans" >
        </Button>

        <!--
<Button 
android:text="@string/toClipboard" 
android:id="@+id/Button02" 
android:layout_height="wrap_content" 
android:layout_marginTop="5px"
android:typeface="sans"
android:gravity="center"
android:textStyle="bold"
android:layout_width="fill_parent">
</Button>
        -->

    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/manualcrack_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="a14de2ce2207597"
        ads:loadAdOnCreate="true" />

</RelativeLayout>