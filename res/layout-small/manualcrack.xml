<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/rl_manualcrack">
  
<LinearLayout android:id="@+id/manualcrack"
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
  
 <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/manualHeader"
    android:typeface="sans"
    android:textSize="17dp"
    android:layout_marginLeft="2dip" 
    android:layout_marginTop="2dip" 
    android:layout_marginBottom="2dip">
    <!-- android:textStyle="bold"> -->
    </TextView>
<EditText 
android:text="@+id/EditText01" 
android:id="@+id/inputESSID"
android:singleLine="true" 
android:layout_width="fill_parent"
android:hint="@string/manual_ESSID_hint" android:layout_height="60dip" android:layout_marginBottom="2dip">
</EditText>
<EditText 
android:text="@+id/EditText02"
android:id="@+id/inputMAC" 
android:layout_width="fill_parent"
android:maxLength="17"
android:singleLine="true"
android:hint="@string/manual_BSSID_hint" android:layout_height="60dip" android:layout_marginBottom="2dip">
</EditText>
<Button 
android:text="@string/mm_OK" 
android:id="@+id/Button01" 
android:typeface="sans"
android:textSize="26dp"
android:gravity="center"
android:textStyle="bold"
android:layout_width="fill_parent" android:layout_height="70dip" android:layout_marginLeft="60dip" android:layout_marginRight="60dip">
</Button>

<!-- <Button 
android:text="@string/toClipboard" 
android:id="@+id/Button02" 
android:layout_height="wrap_content" 
android:layout_marginTop="5px"
android:typeface="sans"
android:gravity="center"
android:textStyle="bold"
android:layout_width="fill_parent">
</Button>
-->
  
</LinearLayout>
<LinearLayout android:id="@+id/ads"
		android:orientation="vertical"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"/>
	
</RelativeLayout>
