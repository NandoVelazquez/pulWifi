<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/rl_manualcrack"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/manualcrack"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dip"
            android:layout_marginTop="15dip"
            android:text="@string/manualHeader"
            android:textSize="42dp"
            android:typeface="sans" >

            <!-- android:textStyle="bold"> -->
        </TextView>
        <!--
<TextView 
android:text="@string/introduceNombre" 
android:id="@+id/TextView01" 
android:layout_width="wrap_content" 
android:layout_marginTop="5px"
android:typeface="sans"
android:layout_height="wrap_content">
</TextView>
        -->

        <EditText
            android:id="@+id/inputESSID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:hint="@string/manual_ESSID_hint"
            android:singleLine="true"
            android:text="@+id/EditText01" >
        </EditText>
        <!--
<TextView 
android:text="@string/introduceMAC" 
android:id="@+id/TextView02" 
android:layout_width="wrap_content" 
android:layout_marginTop="5px"
android:typeface="sans"
android:layout_height="wrap_content">
</TextView>
        -->

        <EditText
            android:id="@+id/inputMAC"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:hint="@string/manual_BSSID_hint"
            android:maxLength="17"
            android:singleLine="true"
            android:text="@+id/EditText02" >
        </EditText>

        <Button
            android:id="@+id/Button01"
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:layout_marginLeft="400dip"
            android:layout_marginRight="400dip"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:text="@string/mm_OK"
            android:textSize="38dp"
            android:textStyle="bold"
            android:typeface="sans" >
        </Button>

        <!--
<Button 
android:text="@string/toClipboard" 
android:id="@+id/Button02" 
android:layout_height="wrap_content" 
android:layout_marginTop="5px"
android:typeface="sans"
android:gravity="center"
android:textStyle="bold"
android:layout_width="fill_parent">
</Button>
        -->

    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/manualcrack_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="a14de2ce2207597"
        ads:loadAdOnCreate="true" />
</RelativeLayout>