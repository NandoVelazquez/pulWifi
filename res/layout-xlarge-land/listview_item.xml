<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
	<TextView
			android:id="@+id/listview_item_crackeable"
			android:layout_width="72dip"
			android:layout_height="72dip" 
			android:layout_alignParentLeft="true">
	</TextView>
	<LinearLayout
			android:layout_height="72dip"
			android:layout_width="fill_parent" 
			android:gravity="center_vertical" 
			android:orientation="vertical" 
			android:paddingLeft="10dip"
			android:paddingRight="40dip"
			android:layout_toRightOf="@id/listview_item_crackeable">
		<TextView
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:id="@+id/listview_item_essid"
				android:layout_width="fill_parent"
				android:textStyle="bold"
				android:typeface="sans"
				android:textSize="24dp">
		</TextView>
		<TextView
				android:layout_height="wrap_content"
				android:id="@+id/listview_item_bssid"
				android:textColor="#A0A0A0"
				android:textSize="20dp"
				android:layout_width="fill_parent">
		</TextView>
	</LinearLayout>
		<ImageView
			android:id="@+id/listview_item_signal_strength"
			android:paddingRight="10dip"
			android:layout_width="58dip"
			android:layout_height="58dip"
			android:layout_weight="0" 
			android:layout_alignParentRight="true"/>
			<TextView 
			android:id="@+id/tv_listitem_security"
			android:layout_height="24dip"
			android:layout_width="80dip"
			android:text="ABIERTA"
			android:singleLine="true"
			android:gravity="right"
			android:textSize="16dip"
			android:layout_marginRight="6dip"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			/>
</RelativeLayout>