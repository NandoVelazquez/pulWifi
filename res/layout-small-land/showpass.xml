<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_weight="0"
                android:baselineAligned="false" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/showpass_network_name"
                    android:textColor="#FF0000"
                    android:textSize="22dp" >
                </TextView>

                <TextView
                    android:id="@+id/showpass_ESSID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="XX:XX:XX:XX:XX:XX"
                    android:textSize="22dp" >
                </TextView>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:baselineAligned="false" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="26dip"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/showpass_network_mac"
                    android:textColor="#FF0000"
                    android:textSize="22dp" >
                </TextView>

                <TextView
                    android:id="@+id/showpass_BSSID"
                    android:layout_width="wrap_content"
                    android:layout_height="26dip"
                    android:layout_gravity="right"
                    android:layout_marginBottom="0dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="XXXXXXX_XXXX"
                    android:textSize="22dp"
                    android:color="#0000FF" >
                </TextView>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button_showpass"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="@string/showpass_button_showpass"
            android:textSize="21dp" >
        </Button>

        <Button
            android:id="@+id/button_clipboard"
            android:layout_width="fill_parent"
            android:layout_height="58dip"
            android:layout_gravity="center"
            android:layout_marginTop="0dip"
            android:layout_weight="0"
            android:text="@string/showpass_button_clipboard"
            android:textSize="21dp" >
        </Button>

        <Button
            android:id="@+id/button_back"
            android:layout_width="fill_parent"
            android:layout_height="56dip"
            android:layout_marginTop="0dip"
            android:layout_weight="0"
            android:text="@string/showpass_button_back"
            android:textSize="21dp"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/select_wireless_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="a14de2ce2207597"
        ads:loadAdOnCreate="true" />

</RelativeLayout>