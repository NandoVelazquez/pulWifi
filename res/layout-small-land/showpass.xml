<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="vertical">
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">    
<TableRow
android:layout_marginBottom="3dip" android:layout_height="wrap_content" android:layout_weight="0" android:baselineAligned="false">
    <TextView 
    android:layout_height="wrap_content" 
    android:id="@+id/textView1" 
    android:textColor="#FF0000"
    android:textSize="22dp" 
    android:text="@string/showpass_network_name" 
    android:layout_width="fill_parent" 
    android:layout_gravity="left" 
    android:layout_weight="1">
    </TextView>
    <TextView 
    android:gravity="right" 
    android:id="@+id/showpass_ESSID" 
    android:text="XX:XX:XX:XX:XX:XX" 
    android:textSize="22dp" 
    android:layout_gravity="right" 
    android:layout_weight="1" 
    android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>
<TableRow android:layout_height="wrap_content" android:baselineAligned="false" android:layout_weight="0">
    <TextView 
    android:text="@string/showpass_network_mac"
    android:textColor="#FF0000" 
    android:id="@+id/textView3"
    android:textSize="22dp"     
    android:layout_height="26dip" android:layout_weight="1" android:layout_gravity="left" android:layout_width="wrap_content">
    </TextView>
    <TextView 
    android:text="XXXXXXX_XXXX" 
    android:id="@+id/showpass_BSSID" 
    android:color="#0000FF"
    android:layout_height="26dip"
    android:textSize="22dp"   
    android:gravity="right" 
    android:layout_marginBottom="0dip" android:layout_weight="1" android:layout_gravity="right" android:layout_width="wrap_content">
    </TextView>
</TableRow>
</TableLayout>    
    <Button 
    android:text="@string/showpass_button_showpass" 
    android:id="@+id/button_showpass"
    android:textSize="21dp" 
    android:layout_width="fill_parent"  
    android:layout_gravity="center" android:layout_weight="0" android:layout_height="58dp">
    </Button>
    <Button 
    android:text="@string/showpass_button_clipboard" 
    android:id="@+id/button_clipboard"
    android:textSize="21dp"  
    android:layout_height="58dip" 
    android:layout_width="fill_parent"
    
    android:layout_marginTop="0dip" android:layout_gravity="center" android:layout_weight="0">
    </Button>
    <Button 
    android:text="@string/showpass_button_back" 
    android:id="@+id/button_back" 
    android:textSize="21dp"  
    android:layout_width="fill_parent"
    android:textStyle="bold" 
    android:layout_marginTop="0dip" android:layout_weight="0" android:layout_height="56dip">
    </Button>
</LinearLayout>
<LinearLayout android:id="@+id/ads"
		android:layout_width="wrap_content" 
		android:layout_alignParentBottom="true" 
		android:layout_height="wrap_content" 
		android:orientation="vertical" 
		android:layout_centerHorizontal="true"/>	
</RelativeLayout>
